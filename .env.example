BOT_TOKEN=123456:ABC-DEF
# Optional. SQLite DB URL.
# Default (works both locally and in Docker with /app/data mounted): `sqlite+aiosqlite:///./data/bot.db`
# Example (explicit absolute path inside container): `sqlite+aiosqlite:////app/data/bot.db`
DB_PATH=sqlite+aiosqlite:///./data/bot.db
COVERAGE_WARN_DAYS=7
TZ=Europe/Moscow
SCHEDULE_ICAL_URL=
# If true, chats with unset iCal URL will use SCHEDULE_ICAL_URL as a fallback.
# If false, env iCal URL is never used implicitly.
SCHEDULE_ICAL_FALLBACK_ENABLED=true
# Minimum interval between iCal syncs (seconds). 0 = no limit.
ICAL_SYNC_MIN_INTERVAL_SECONDS=0
ICAL_SYNC_DAYS=14
SETUP_TOKEN_TTL_MINUTES=20

# Optional: HTTP(S) proxy for Telegram API (useful when api.telegram.org is blocked)
# Example: http://user:pass@host:port
TELEGRAM_PROXY=
